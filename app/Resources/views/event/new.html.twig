{% extends ':layout:layout.html.twig' %}

{% block container %}
<h1>Event creation</h1>

{{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}

<div class="form-group">
  {{ form_label(form.name, 'Name' , { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
  <div class="col-sm-10"> {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }} </div>
  <div class="col-sm-10 col-sm-offset-2" style="color:red; list-style-type: none; "> {{ form_errors(form.name) }}</div>
</div>

<div class="form-group">
  {{ form_label(form.startdate, 'Start date' , { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
  <div class="col-sm-10"> {{ form_widget(form.startdate, { 'attr': {'class': 'form-control'} }) }} </div>
  <div class="col-sm-10 col-sm-offset-2" style="color:red; list-style-type: none; "> {{ form_errors(form.startdate) }}</div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <input type="submit" value="Create event" class="btn btn-success"/>
    {{ form_rest(form) }}
  </div>
</div>
{{ form_end(form) }}

{% endblock %}
